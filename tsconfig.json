{
  "compilerOptions": {
    "target": "es6",                  /* Specify ECMAScript target version */
    "module": "commonjs",             /* Specify module system (e.g., 'commonjs', 'amd', 'system', 'umd') */
    "outDir": "./dist",               /* Specify output directory for compiled JavaScript files */
    "strict": true,                   /* Enable all strict type-checking options */
    "esModuleInterop": true,          /* Simplify interoperability between CommonJS and ES Module (ESM) */
    "skipLibCheck": true,             /* Skip type checking of declaration files */
    "forceConsistentCasingInFileNames": true, /* Ensure that casing is consistent in file names */
    "resolveJsonModule": true,        /* Allow importing JSON modules */
    "jsx": "react",                   /* Specify JSX code generation: 'preserve', 'react', or 'react-native' */
    "declaration": true,              /* Generate corresponding '.d.ts' files */
    "sourceMap": true,                /* Generate source maps for better debugging experience */
    "experimentalDecorators": true,   /* Enable experimental support for decorators */
    "emitDecoratorMetadata": true     /* Emit design-type metadata for decorated declarations in source files */
  },
  "include": ["**/**/*.ts"],        /* Specify which files to include in the compilation */
  "exclude": ["node_modules"]        /* Specify files to be excluded from compilation */
}
